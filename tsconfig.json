{
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./exercises",
    "lib": ["es2016", "dom"],
    "target": "es2016",
    "jsx": "react",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "rootDir": "exercises",
  },
  "exclude": [
    "node_modules"
  ]
}
